<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkAccess"
        mc:Ignorable="d"
        x:Class="ParkAccess.PopupEvent"
        x:DataType="local:PopupEvent"
        Width="600"
        Height="500"
        Title="PopupEvent"
        CanResize="False"
		WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Color x:Key="PrimaryColor">#4361ee</Color>
        <Color x:Key="SecondaryColor">#3a0ca3</Color>
        <Color x:Key="AccentColor">#4cc9f0</Color>
        <Color x:Key="SuccessColor">#06d6a0</Color>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="Inter, Segoe UI, San Francisco, sans-serif"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Background" Value="#f0f0f4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20 14"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="TextBlock.ButtonText">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style Selector="Border.Card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style Selector="TextBlock.SectionTitle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0 0 0 16"/>
        </Style>

    </Window.Styles>
    <Border Classes="Card">
    <StackPanel Spacing="20">
    <TextBlock Text="Nouvel évenement"
    FontSize="20"
    FontWeight="SemiBold"
    HorizontalAlignment="Center"
    Margin="0 0 0 20"/>

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" HorizontalAlignment="Center">
    <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom :" VerticalAlignment="Center"/>
    <TextBox Grid.Row="0" Grid.Column="1"  Width="300" HorizontalAlignment="Left" Margin="10" Watermark="Nom de l'évenement" x:Name="nameText"/>

    <TextBlock Grid.Row="1" Grid.Column="0" Text="Description :" VerticalAlignment="Center"/>
    <TextBox Grid.Row="1" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="10" Watermark="Description de l'évenement" AcceptsReturn="True" TextWrapping="Wrap" Name="descriptionText"/>

    <TextBlock Grid.Row="2" Grid.Column="0" Text="Parking :" VerticalAlignment="Center"/>
		<ComboBox Grid.Row="2" Grid.Column="1"
          Width="300" HorizontalAlignment="Left" Margin="10"
          ItemsSource="{CompiledBinding Parkings}"
		  PlaceholderText="Sélectionner un parking"
          SelectedItem="{CompiledBinding SelectedParking}">
			<ComboBox.ItemTemplate>
				<DataTemplate x:DataType="local:Parking">
					<TextBlock Text="{CompiledBinding Nom}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
    <TextBlock Grid.Row="3" Grid.Column="0" Text="Date de l'évenement :" VerticalAlignment="Center"/>
    <DatePicker Grid.Row="3" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="10" x:Name="dateChoice"/>

    <TextBlock Grid.Row="4" Grid.Column="0" Text="Heure de début :" VerticalAlignment="Center"/>
    <TimePicker Grid.Row="4" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="10" x:Name="beginHourChoice"/>

    <TextBlock Grid.Row="5" Grid.Column="0" Text="Heure de fin :" VerticalAlignment="Center"/>
    <TimePicker Grid.Row="5" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="10" x:Name="finalHourChoice"/>
    </Grid>

    <Button Content="Enregistrer"
    Click="CreateActivity"
    Background="{DynamicResource PrimaryColor}"
    Foreground="White"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    HorizontalContentAlignment="Center"
    Margin="0 20 0 0"/>
    </StackPanel>
    </Border>
</Window>
