<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ParkAccess.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="ParkAccess.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ParkAccess"
        Background="#f5f5f7"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        WindowStartupLocation="CenterScreen">

	<Window.Resources>
		<Color x:Key="PrimaryColor">#4361ee</Color>
		<Color x:Key="SecondaryColor">#3a0ca3</Color>
		<Color x:Key="AccentColor">#4cc9f0</Color>
		<Color x:Key="SuccessColor">#06d6a0</Color>
	</Window.Resources>

	<Window.Styles>
		<!-- Window styles -->
		<Style Selector="Window">
			<Setter Property="FontFamily" Value="Inter, Segoe UI, San Francisco, sans-serif"/>
		</Style>

		<!-- TabControl styles -->
		<Style Selector="TabControl">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Padding" Value="16"/>
		</Style>

		<Style Selector="TabItem">
			<Setter Property="FontSize" Value="17"/>
			<Setter Property="Foreground" Value="#555555"/>
			<Setter Property="Margin" Value="0 0 4 0"/>
			<Setter Property="Padding" Value="16 6"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Background" Value="Transparent"/>
		</Style>

		<Style Selector="TabItem:selected">
			<Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="TabItem:pointerover /template/ Border#PART_SelectedPipe">
			<Setter Property="Background" Value="{DynamicResource AccentColor}"/>
			<Setter Property="Opacity" Value="0.6"/>
		</Style>

		<Style Selector="TabItem:selected /template/ Border#PART_SelectedPipe">
			<Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
			<Setter Property="Opacity" Value="1"/>
		</Style>

		<!-- ToggleButton styles -->
		<Style Selector="ToggleButton">
			<Setter Property="CornerRadius" Value="24"/>
			<Setter Property="Background" Value="#f0f0f4"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="20 14"/>
			<Setter Property="MinWidth" Value="140"/>
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="Background" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
		</Style>

		<Style Selector="ToggleButton:pointerover">
			<Setter Property="Background" Value="#e8e8ec"/>
		</Style>

		<Style Selector="ToggleButton:checked">
			<Setter Property="Background" Value="{DynamicResource SuccessColor}"/>
		</Style>

		<Style Selector="TextBlock.ButtonText">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="Medium"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
		</Style>

		<Style Selector="ToggleButton TextBlock.Open">
			<Setter Property="IsVisible" Value="False"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>

		<Style Selector="ToggleButton:checked TextBlock.Open">
			<Setter Property="IsVisible" Value="True"/>
		</Style>

		<Style Selector="ToggleButton TextBlock.Close">
			<Setter Property="IsVisible" Value="True"/>
			<Setter Property="Foreground" Value="#555555"/>
		</Style>

		<Style Selector="ToggleButton:checked TextBlock.Close">
			<Setter Property="IsVisible" Value="False"/>
		</Style>

		<Style Selector="ToggleButton PathIcon.Lock">
			<Setter Property="IsVisible" Value="True"/>
			<Setter Property="Foreground" Value="#555555"/>
		</Style>

		<Style Selector="ToggleButton:checked PathIcon.Lock">
			<Setter Property="IsVisible" Value="False"/>
		</Style>

		<Style Selector="ToggleButton PathIcon.Unlock">
			<Setter Property="IsVisible" Value="False"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>

		<Style Selector="ToggleButton:checked PathIcon.Unlock">
			<Setter Property="IsVisible" Value="True"/>
		</Style>

		<!-- Calendar styles -->
		<Style Selector="Calendar">
			<Setter Property="Margin" Value="0 24 0 0"/>
			<Setter Property="Background" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="CornerRadius" Value="12"/>
			<Setter Property="Padding" Value="8"/>
		</Style>

		<Style Selector="CalendarItem">
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="CornerRadius" Value="10"/>
		</Style>

		<Style Selector="CalendarDayButton">
			<Setter Property="CornerRadius" Value="6"/>
		</Style>

		<Style Selector="CalendarDayButton:selected">
			<Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
		</Style>

		<!-- Card styles -->
		<Style Selector="Border.Card">
			<Setter Property="Background" Value="White"/>
			<Setter Property="CornerRadius" Value="16"/>
			<Setter Property="Padding" Value="24"/>
			<Setter Property="Margin" Value="0"/>

		</Style>

	</Window.Styles>

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Grid RowDefinitions="Auto,*" Margin="12 40 12 12">
		<TextBlock Grid.Row="0"
                   Text="Park Access Management"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#333333"
                   Margin="12 0 0 16"/>

		<TabControl Grid.Row="1" Margin="0">
			<TabItem Header="Parking 1">
				<Border Classes="Card">
					<Grid RowDefinitions="Auto,Auto" VerticalAlignment="Center">
						<Grid Grid.Row="0" ColumnDefinitions="*,Auto,*" HorizontalAlignment="Center">
							<TextBlock Grid.Column="0"
                                       Text="Gate Status"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0 0 16 0"
                                       FontSize="14"
                                       Foreground="#555555"/>

							<ToggleButton Grid.Column="1" IsChecked="False" Margin="0">
								<StackPanel Orientation="Horizontal" Spacing="12">
									<PathIcon Classes="Lock"
                                              Data="M144 144l0 48 160 0 0-48c0-44.2-35.8-80-80-80s-80 35.8-80 80zM80 192l0-48C80 64.5 144.5 0 224 0s144 64.5 144 144l0 48 16 0c35.3 0 64 28.7 64 64l0 192c0 35.3-28.7 64-64 64L64 512c-35.3 0-64-28.7-64-64L0 256c0-35.3 28.7-64 64-64l16 0z"
                                              Width="18"
                                              Height="18"/>
									<PathIcon Classes="Unlock"
                                              Data="M144 144c0-44.2 35.8-80 80-80c31.9 0 59.4 18.6 72.3 45.7c7.6 16 26.7 22.8 42.6 15.2s22.8-26.7 15.2-42.6C331 33.7 281.5 0 224 0C144.5 0 80 64.5 80 144l0 48-16 0c-35.3 0-64 28.7-64 64L0 448c0 35.3 28.7 64 64 64l320 0c35.3 0 64-28.7 64-64l0-192c0-35.3-28.7-64-64-64l-240 0 0-48z"
                                              Width="18"
                                              Height="18"/>
									<TextBlock Classes="ButtonText Close" Text="Closed"/>
									<TextBlock Classes="ButtonText Open" Text="Open"/>
								</StackPanel>
							</ToggleButton>

							<TextBlock Grid.Column="2"
                                       Text="Available Dates"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="16 0 0 0"
                                       FontSize="14"
                                       Foreground="#555555"
                                       Opacity="0"/>
						</Grid>
						<Grid Grid.Row="1" ColumnDefinitions="Auto" HorizontalAlignment="Center" Margin="0 24 0 0">
							<Border Classes="Card" Padding="8" Margin="0">
								<Calendar x:Name="calendarP1" SelectionMode="SingleRange"/>
							</Border>
						</Grid>
					</Grid>
				</Border>
			</TabItem>

			<TabItem Header="Parking 2">
				<Border Classes="Card">
					<Grid RowDefinitions="Auto,Auto" VerticalAlignment="Center">
						<Grid Grid.Row="0" ColumnDefinitions="*,Auto,*" HorizontalAlignment="Center">
							<TextBlock Grid.Column="0"
                                       Text="Gate Status"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0 0 16 0"
                                       FontSize="14"
                                       Foreground="#555555"/>

							<ToggleButton Grid.Column="1" IsChecked="False" Margin="0">
								<StackPanel Orientation="Horizontal" Spacing="12">
									<PathIcon Classes="Lock"
                                              Data="M144 144l0 48 160 0 0-48c0-44.2-35.8-80-80-80s-80 35.8-80 80zM80 192l0-48C80 64.5 144.5 0 224 0s144 64.5 144 144l0 48 16 0c35.3 0 64 28.7 64 64l0 192c0 35.3-28.7 64-64 64L64 512c-35.3 0-64-28.7-64-64L0 256c0-35.3 28.7-64 64-64l16 0z"
                                              Width="18"
                                              Height="18"/>
									<PathIcon Classes="Unlock"
                                              Data="M144 144c0-44.2 35.8-80 80-80c31.9 0 59.4 18.6 72.3 45.7c7.6 16 26.7 22.8 42.6 15.2s22.8-26.7 15.2-42.6C331 33.7 281.5 0 224 0C144.5 0 80 64.5 80 144l0 48-16 0c-35.3 0-64 28.7-64 64L0 448c0 35.3 28.7 64 64 64l320 0c35.3 0 64-28.7 64-64l0-192c0-35.3-28.7-64-64-64l-240 0 0-48z"
                                              Width="18"
                                              Height="18"/>
									<TextBlock Classes="ButtonText Close" Text="Closed"/>
									<TextBlock Classes="ButtonText Open" Text="Open"/>
								</StackPanel>
							</ToggleButton>

							<TextBlock Grid.Column="2"
                                       Text="Available Dates"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="16 0 0 0"
                                       FontSize="14"
                                       Foreground="#555555"
                                       Opacity="0"/>
						</Grid>
						<Grid Grid.Row="1" ColumnDefinitions="Auto" HorizontalAlignment="Center" Margin="0 24 0 0">
							<Border Classes="Card" Padding="8" Margin="0">
								<Calendar x:Name="calendarP2" SelectionMode="SingleRange"/>
							</Border>
						</Grid>
					</Grid>
				</Border>
			</TabItem>

			<TabItem Header="Parking 3">
				<Border Classes="Card">
					<Grid RowDefinitions="Auto,Auto" VerticalAlignment="Center">
						<Grid Grid.Row="0" ColumnDefinitions="*,Auto,*" HorizontalAlignment="Center">
							<TextBlock Grid.Column="0"
                                       Text="Gate Status"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0 0 16 0"
                                       FontSize="14"
                                       Foreground="#555555"/>

							<ToggleButton Grid.Column="1" IsChecked="False" Margin="0">
								<StackPanel Orientation="Horizontal" Spacing="12">
									<PathIcon Classes="Lock"
                                              Data="M144 144l0 48 160 0 0-48c0-44.2-35.8-80-80-80s-80 35.8-80 80zM80 192l0-48C80 64.5 144.5 0 224 0s144 64.5 144 144l0 48 16 0c35.3 0 64 28.7 64 64l0 192c0 35.3-28.7 64-64 64L64 512c-35.3 0-64-28.7-64-64L0 256c0-35.3 28.7-64 64-64l16 0z"
                                              Width="18"
                                              Height="18"/>
									<PathIcon Classes="Unlock"
                                              Data="M144 144c0-44.2 35.8-80 80-80c31.9 0 59.4 18.6 72.3 45.7c7.6 16 26.7 22.8 42.6 15.2s22.8-26.7 15.2-42.6C331 33.7 281.5 0 224 0C144.5 0 80 64.5 80 144l0 48-16 0c-35.3 0-64 28.7-64 64L0 448c0 35.3 28.7 64 64 64l320 0c35.3 0 64-28.7 64-64l0-192c0-35.3-28.7-64-64-64l-240 0 0-48z"
                                              Width="18"
                                              Height="18"/>
									<TextBlock Classes="ButtonText Close" Text="Closed"/>
									<TextBlock Classes="ButtonText Open" Text="Open"/>
								</StackPanel>
							</ToggleButton>

							<TextBlock Grid.Column="2"
                                       Text="Available Dates"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="16 0 0 0"
                                       FontSize="14"
                                       Foreground="#555555"
                                       Opacity="0"/>
						</Grid>
						<Grid Grid.Row="1" ColumnDefinitions="Auto" HorizontalAlignment="Center" Margin="0 24 0 0">
							<Border Classes="Card" Padding="8" Margin="0">
								<Calendar x:Name="calendarP3" SelectionMode="SingleRange"/>
							</Border>
						</Grid>
					</Grid>
				</Border>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
